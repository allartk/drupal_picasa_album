/**
 * Implements hook_block_save()
 */ 
 function picasa_album_block_save($delta = '', $edit = array()) {
	if ($delta == 'album_list') {
		variable_set('picasa_album_user', $edit['picasa_album_user']);
		variable_set('picasa_album_number', $edit['picasa_album_number']);
	}
 }
 	
 	
/**
